<Window x:Class="BakeryManagementSystem.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="דוחות ונתונים" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft" 
        FontFamily="Segoe UI" Background="#FDF8F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#8D6E63"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.TextAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6D4C41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="📊" FontSize="28" Margin="0,0,10,0"/>
            <TextBlock Text="מערכת דוחות מתקדמת" FontSize="32" FontWeight="Light" Foreground="#3E2723" FontFamily="Palatino Linotype"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#8D6E63" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <UniformGrid Columns="4" Rows="1">
                <Button Content="💰 רווחיות משמרות&#x0a;(הכנסות מול עלות עבודה)" Click="btnReport1_Click"/>
                <Button Content="🏆 עובדים מצטיינים&#x0a;(בונוסים ותפוקה)" Click="btnReport2_Click"/>
                <Button Content="📦 סטטוס מלאי&#x0a;(שימוש והתראות)" Click="btnReport3_Click"/>
                <Button Content="⏳ תוקף קרוב&#x0a;(מה לייצר דחוף)" Click="btnReport4_Click"/>
            </UniformGrid>
        </Border>

        <DataGrid Grid.Row="2" x:Name="dgReports" AutoGenerateColumns="True" 
                  AutoGeneratingColumn="dgReports_AutoGeneratingColumn"
                  Background="White" BorderBrush="#EFEBE9" BorderThickness="1"
                  RowBackground="White" AlternatingRowBackground="#FAF3E0"
                  HeadersVisibility="Column" IsReadOnly="True" SelectionMode="Single"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EFEBE9">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#A1887F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Height" Value="45"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <Button Grid.Row="3" Content="חזרה לתפריט הראשי" Click="btnBack_Click" 
                HorizontalAlignment="Left" Background="Transparent" Foreground="#8D6E63" 
                BorderThickness="1" BorderBrush="#8D6E63" Width="150" Height="40" Margin="0,15,0,0"/>
    </Grid>
</Window>