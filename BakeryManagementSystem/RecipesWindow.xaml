<Window x:Class="BakeryManagementSystem.RecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="בניית מתכונים" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft" 
        FontFamily="Segoe UI" Background="#FDF8F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#8D6E63"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6D4C41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="👨‍🍳" FontSize="28" Margin="0,0,10,0"/>
            <TextBlock Text="בניית מתכונים והרכבים" FontSize="32" FontWeight="Light" Foreground="#3E2723" FontFamily="Palatino Linotype"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#8D6E63" BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="בחר מוצר לעריכה:" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,15,0"/>

                <ComboBox x:Name="cmbProducts" Width="300" SelectionChanged="cmbProducts_SelectionChanged" DisplayMemberPath="name" SelectedValuePath="product_id"/>

                <TextBlock x:Name="lblRecipeStatus" Text="אנא בחר מוצר..." VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#BCAAA4" FontSize="14"/>
            </StackPanel>
        </Border>

        <GroupBox Grid.Row="2" Header="הוספת רכיב למתכון" BorderBrush="#D7CCC8" Foreground="#5D4037" FontSize="16" Margin="0,0,0,20" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="10,0">
                    <TextBlock Text="חומר גלם:" FontSize="14" Foreground="#5D4037" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbIngredients" Width="200" DisplayMemberPath="name" SelectedValuePath="ingredient_id"/>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <TextBlock Text="כמות:" FontSize="14" Foreground="#5D4037" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtQuantity" Width="80" Height="35" VerticalContentAlignment="Center" BorderBrush="#D7CCC8" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <TextBlock Text="יחידה:" FontSize="14" Foreground="#5D4037" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbUnit" Width="90">
                        <ComboBoxItem Content="kg"/>
                        <ComboBoxItem Content="g"/>
                        <ComboBoxItem Content="L"/>
                        <ComboBoxItem Content="mL"/>
                        <ComboBoxItem Content="pcs"/>
                    </ComboBox>
                </StackPanel>

                <Button Content="⬇️ הוסף למתכון" Click="btnAddIngredient_Click" VerticalAlignment="Bottom" Width="140" Margin="20,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="3" x:Name="dgRecipeItems" AutoGenerateColumns="False" 
                  Background="White" BorderBrush="#EFEBE9" BorderThickness="1"
                  RowBackground="White" AlternatingRowBackground="#FAF3E0"
                  HeadersVisibility="Column" IsReadOnly="True" SelectionMode="Single"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EFEBE9">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#A1887F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Height" Value="40"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="שם חומר הגלם" Binding="{Binding ingredient_name}" Width="*"/>
                <DataGridTextColumn Header="כמות נדרשת" Binding="{Binding quantity}" Width="120"/>
                <DataGridTextColumn Header="יחידת מידה" Binding="{Binding unit}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,15,0,0">
            <Button Content="❌ הסר רכיב מסומן" Click="btnRemove_Click" Background="#E57373" Width="180"/>

            <Button Content="חזרה לתפריט" Click="btnBack_Click" 
                    Background="Transparent" Foreground="#8D6E63" BorderThickness="1" BorderBrush="#8D6E63" 
                    Width="130" Margin="15,0,0,0"/>
        </StackPanel>

    </Grid>
</Window>