<Window x:Class="BakeryManagementSystem.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="קטלוג מוצרים" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft" 
        FontFamily="Segoe UI" Background="#FDF8F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#8D6E63"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="20" Effect="{x:Null}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6D4C41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#D7CCC8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#3E2723"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="#3E2723"/>
            <Setter Property="BorderBrush" Value="#D7CCC8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="🥐" FontSize="28" Margin="0,0,10,0"/>
                <TextBlock Text="קטלוג מוצרים" FontSize="32" FontWeight="Light" Foreground="#3E2723" FontFamily="Palatino Linotype"/>
            </StackPanel>

            <Border Grid.Column="2" Background="White" CornerRadius="15" BorderBrush="#D7CCC8" BorderThickness="1" 
                    Width="250" Height="35" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="🔍" Margin="0,0,5,0" Foreground="#BCAAA4"/>
                    <TextBox x:Name="txtSearch" Width="200" BorderThickness="0" Background="Transparent" 
                             VerticalContentAlignment="Center" FontSize="14" Foreground="#5D4037"
                             TextChanged="txtSearch_TextChanged"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,25">
            <Border.Effect>
                <DropShadowEffect Color="#8D6E63" BlurRadius="20" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="פרטי המוצר (הוספה / עריכה)" FontSize="16" FontWeight="Bold" Foreground="#8D6E63" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="10,0">
                        <TextBlock Text="שם המוצר" Foreground="#5D4037" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtName" Width="200"/>
                    </StackPanel>

                    <StackPanel Margin="10,0">
                        <TextBlock Text="קטגוריה" Foreground="#5D4037" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbCategory" Width="150">
                            <ComboBoxItem Content="Breads"/>
                            <ComboBoxItem Content="Cakes"/>
                            <ComboBoxItem Content="Savory"/>
                            <ComboBoxItem Content="Cookies"/>
                            <ComboBoxItem Content="Drinks"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="10,0">
                        <TextBlock Text="מחיר מכירה" Foreground="#5D4037" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPrice" Width="100"/>
                    </StackPanel>

                    <Button Content="שמור מוצר חדש" Click="btnAdd_Click" VerticalAlignment="Bottom" Margin="20,0,0,0" Width="140"/>
                    <Button Content="עדכן מוצר קיים" Click="btnUpdate_Click" Background="#BCAAA4" Width="140" Margin="10,0,0,0" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" x:Name="dgProducts" AutoGenerateColumns="False" 
                  SelectionChanged="dgProducts_SelectionChanged"
                  Background="White" BorderBrush="#EFEBE9" BorderThickness="1"
                  RowBackground="White" AlternatingRowBackground="#FAF3E0"
                  HeadersVisibility="Column" IsReadOnly="True" SelectionMode="Single"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EFEBE9">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#A1887F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Height" Value="40"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="מזהה" Binding="{Binding product_id}" Width="80"/>
                <DataGridTextColumn Header="שם המוצר" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="קטגוריה" Binding="{Binding category}" Width="150"/>
                <DataGridTextColumn Header="מחיר ללקוח" Binding="{Binding price, StringFormat={}{0:C}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="רענן רשימה" Click="btnRefresh_Click" Background="#BCAAA4" Width="130"/>
            <Button Content="מחק מוצר מסומן" Click="btnDelete_Click" Background="#E57373" Width="150" Margin="20,0"/>
            <Button Content="חזרה לתפריט" Click="btnBack_Click" Background="Transparent" Foreground="#8D6E63" BorderThickness="1" BorderBrush="#8D6E63"/>
        </StackPanel>
    </Grid>
</Window>