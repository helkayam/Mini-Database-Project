<Window x:Class="BakeryManagementSystem.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="תפריט ראשי" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        FlowDirection="RightToLeft" FontFamily="Segoe UI" Background="#FDF8F5">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#5D4037"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="15" Background="{TemplateBinding Background}" 
                                BorderBrush="#D7CCC8" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#8D6E63" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                  TextBlock.FontWeight="SemiBold"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EFEBE9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="BOUTIQUE" FontSize="40" Foreground="#8D6E63" 
                           HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Palatino Linotype"/>
                <TextBlock Text="ניהול מאפייה" FontSize="18" Foreground="#BCAAA4" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <Button Content="📦 ניהול מלאי וחומרים" Style="{StaticResource MenuButtonStyle}" Click="btnInventory_Click"/>
                <Button Content="🥐 קטלוג מוצרים" Style="{StaticResource MenuButtonStyle}" Click="btnProducts_Click"/>
                <Button Content="👨‍🍳 בניית מתכונים" Style="{StaticResource MenuButtonStyle}" Click="btnRecipes_Click"/>
                <Button Content="📊 דוחות ונתונים" Style="{StaticResource MenuButtonStyle}" Click="btnReports_Click"/>

                <Rectangle Height="30" Fill="Transparent"/>

                <Button Content="יציאה מהמערכת" Click="btnExit_Click" 
                        Background="Transparent" Foreground="#E57373" BorderThickness="0" 
                        FontSize="16" Cursor="Hand" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Border Grid.Column="1" Margin="40,0,0,0" CornerRadius="20" Background="#EEE">
                <Border.Effect>
                    <DropShadowEffect Color="#8D6E63" BlurRadius="20" ShadowDepth="0" Opacity="0.15"/>
                </Border.Effect>
                <Grid>
                    <Image Source="https://images.unsplash.com/photo-1509440159596-0249088772ff?q=80&amp;w=2072&amp;auto=format&amp;fit=crop" 
                           Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,530,520" RadiusX="20" RadiusY="20"/>
                        </Image.Clip>
                    </Image>

                    <StackPanel VerticalAlignment="Bottom" Margin="30">
                        <TextBlock Text="ברוך הבא," FontSize="32" Foreground="White" FontWeight="Bold">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="המערכת מוכנה לעבודה." FontSize="20" Foreground="#F0F0F0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>