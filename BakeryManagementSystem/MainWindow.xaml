<Window x:Class="BakeryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="כניסה למערכת" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        FlowDirection="RightToLeft" FontFamily="Segoe UI" Background="#FDF8F5">

    <Grid>
        <Border Width="380" Height="420" Background="White" CornerRadius="20" 
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect Color="#8D6E63" Direction="270" ShadowDepth="4" Opacity="0.15" BlurRadius="25"/>
            </Border.Effect>

            <StackPanel Margin="40" VerticalAlignment="Center">

                <TextBlock Text="BOUTIQUE" FontSize="36" FontWeight="Bold" Foreground="#8D6E63" 
                           HorizontalAlignment="Center" FontFamily="Palatino Linotype"/>
                <TextBlock Text="Bakery Management" FontSize="16" Foreground="#BCAAA4" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <TextBlock Text="קוד עובד" Foreground="#5D4037" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="txtEmployeeId" Height="45" FontSize="16" Padding="10"
                         BorderBrush="#D7CCC8" BorderThickness="1" Background="#FAFAFA"
                         VerticalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Button x:Name="btnLogin" Content="התחברות למערכת" Click="btnLogin_Click"
                        Height="50" Margin="0,30,0,0" FontSize="18" FontWeight="Bold"
                        Background="#8D6E63" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock x:Name="lblStatus" Text="" Foreground="#E57373" 
                           HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>